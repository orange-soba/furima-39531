<% if item.favorited_by?(current_user) %>
  <%= link_to item_favorites_path(item.id), data: { turbo_method: :delete }, class: "favorite-btn__link" do %>
    <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
    <span>お気に入り済 0</span>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item.id), data: { turbo_method: :post }, class: "favorite-btn__link" do %>
    <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
    <span>お気に入り 0</span>
  <% end %>
<% end %>